{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "Natan de Melo Borges",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "with-env": "yarn dotenv -e ../../.env",
    "build": "NODE_ENV=production nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "NODE_ENV=development  PORT=${BACKEND_PORT:-${PORT:-8080}} yarn with-env nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build:openapi:client": "npx rapini react-query v5 -p openapi.yaml -o ../web/src/lib/react-query && yarn build:openapi:client:remove-package-json && yarn build:openapi:client:fix-onsuccess-context && yarn prettier --write ../web/src/lib/react-query/index.ts",
    "build:openapi:client:remove-package-json": "rm -rf ../web/src/lib/react-query/package.json",
    "build:openapi:client:fix-onsuccess-context": "perl -pi -e 's/onSuccess: \\(data: TData, variables: TVariables, context\\?: TContext\\) => {/onSuccess: \\(data: TData, variables: TVariables, context: TContext\\) => {/g' ../web/src/lib/react-query/index.ts"
  },
  "dependencies": {
    "@nestjs/common": "10.4.8",
    "@nestjs/core": "10.4.8",
    "@nestjs/platform-express": "10.4.8",
    "@nestjs/config": "3.3.0",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/swagger": "8.0.7",
    "@nestjs/passport": "10.0.3",
    "nestjs-prisma": "0.23.0",
    "reflect-metadata": "0.2.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "rxjs": "7.8.1",
    "nestjs-zod": "4.2.0",
    "zod": "3.23.8",
    "argon2": "0.41.1",
    "date-fns": "4.1.0",
    "helmet": "8.0.0",
    "cookie-parser": "1.4.7",
    "yaml": "2.6.1",
    "dotenv-cli": "7.4.3"
  },
  "devDependencies": {
    "@anatine/zod-mock": "3.13.4",
    "@nestjs/cli": "10.4.7",
    "@nestjs/schematics": "10.2.3",
    "@nestjs/testing": "10.4.8",
    "@suites/di.nestjs": "3.0.0",
    "@suites/doubles.jest": "3.0.0",
    "@suites/unit": "3.0.0",
    "@swc/cli": "0.5.1",
    "@swc/core": "1.9.2",
    "@swc/jest": "0.2.37",
    "@testcontainers/postgresql": "10.14.0",
    "@testcontainers/redis": "10.14.0",
    "@types/cookie-parser": "1.4.7",
    "@types/express": "5.0.0",
    "@types/express-serve-static-core": "5.0.1",
    "@types/jest": "29.5.14",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/qs": "6.9.17",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.15.0",
    "@typescript-eslint/parser": "8.15.0",
    "eslint": "9.15.0",
    "eslint-define-config": "2.1.0",
    "jest": "29.7.0",
    "jest-mock-extended": "3.0.7",
    "prettier": "3.3.3",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "swc-loader": "0.2.6",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
